@using MixERP.Purchases.Extensions
@model long

@{
    ViewBag.Title = "Checklist";
    Layout = ViewBag.PurchaseLayoutPath;
}

@Html.FinancePartialView("Shared/Checklist.cshtml", TenantConvention.GetTenant())

<script>
    window.overridePath = "/dashboard/purchase/tasks/return";

    window.prepareChecklist({
        Title: "Purchase Return Checklist #@Model",
        ViewText: "View Purchase Returns",
        ViewUrl: "/dashboard/purchase/tasks/return",
        ReportPath: "/dashboard/reports/source/Areas/MixERP.Purchases/Reports/Return.xml?transaction_master_id=@Model"
    });
</script>
